// Cargar noticias de Tlalnepantla
async function loadNews() {
    const newsContainer = document.getElementById('news-container');
    newsContainer.innerHTML = '';
    try {
        const response = await fetch('noticias.json');
        if (!response.ok) {
            throw new Error('No se pudo encontrar noticias.json.');
        }
        const noticias = await response.json();
        const noticiasTlalnepantla = noticias.filter(news => news.ciudad === 'Tlalnepantla');
        if (!noticiasTlalnepantla.length) {
            newsContainer.innerHTML = '<p>No hay noticias disponibles para Tlalnepantla.</p>';
            return;
        }
        noticiasTlalnepantla.slice(0, 6).forEach(news => {
            const article = `
                <article>
                    <img src="${news.imagen}" alt="${news.titulo}">
                    <h4>${news.titulo}</h4>
                    <p>${news.resumen}</p>
                    <button class="share-btn" onclick="shareArticle('${news.titulo}')">Compartir</button>
                </article>
            `;
            newsContainer.innerHTML += article;
        });
    } catch (error) {
        console.error('Error cargando noticias:', error);
        newsContainer.innerHTML = '<p>Error al cargar noticias. Aseg√∫rate de que noticias.json est√© en el mismo folder y usa un servidor local.</p>';
    }
}

// Cargar noticias destacadas de Tlalnepantla en el carrusel
async function loadCarousel() {
    const carouselInner = document.querySelector('.carousel-inner');
    carouselInner.innerHTML = '';
    try {
        const response = await fetch('noticias.json');
        if (!response.ok) {
            throw new Error('No se pudo encontrar noticias.json.');
        }
        const noticias = await response.json();
        const destacadas = noticias.filter(news => news.destacada && news.ciudad === 'Tlalnepantla');
        if (destacadas.length === 0) {
            noticias.filter(news => news.ciudad === 'Tlalnepantla').slice(0, 3).forEach(news => {
                const item = `
                    <div class="carousel-item">
                        <img src="${news.imagen}" alt="${news.titulo}">
                        <h3>${news.titulo}</h3>
                        <p>${news.resumen}</p>
                        <button class="share-btn" onclick="shareArticle('${news.titulo}')">Compartir</button>
                    </div>
                `;
                carouselInner.innerHTML += item;
            });
        } else {
            destacadas.forEach(news => {
                const item = `
                    <div class="carousel-item">
                        <img src="${news.imagen}" alt="${news.titulo}">
                        <h3>${news.titulo}</h3>
                        <p>${news.resumen}</p>
                        <button class="share-btn" onclick="shareArticle('${news.titulo}')">Compartir</button>
                    </div>
                `;
                carouselInner.innerHTML += item;
            });
        }
        // Iniciar el carrusel solo si hay m√°s de un √≠tem
        const items = document.querySelectorAll('.carousel-item');
        if (items.length > 1) {
            setInterval(() => moveCarousel(1), 5000); // Cambia cada 5 segundos
        }
    } catch (error) {
        console.error('Error cargando carrusel:', error);
        carouselInner.innerHTML = '<p>Error al cargar noticias destacadas.</p>';
    }
}

// Funcionalidad del carrusel
let currentIndex = 0;
function moveCarousel(direction) {
    const items = document.querySelectorAll('.carousel-item');
    const totalItems = items.length;
    if (totalItems <= 1) return; // No mover si hay 0 o 1 items
    currentIndex += direction;
    if (currentIndex >= totalItems) currentIndex = 0;
    else if (currentIndex < 0) currentIndex = totalItems - 1;
    const offset = -currentIndex * 100;
    document.querySelector('.carousel-inner').style.transform = `translateX(${offset}%)`;
}

// Funcionalidad de b√∫squeda (solo en Tlalnepantla)
function searchNews() {
    const query = document.getElementById('search').value.toLowerCase();
    const newsContainer = document.getElementById('news-container');
    newsContainer.innerHTML = '';
    try {
        fetch('noticias.json')
            .then(response => {
                if (!response.ok) throw new Error('No se pudo encontrar noticias.json.');
                return response.json();
            })
            .then(noticias => {
                noticias
                    .filter(news => news.ciudad === 'Tlalnepantla' && 
                            (news.titulo.toLowerCase().includes(query) || news.resumen.toLowerCase().includes(query)))
                    .slice(0, 6)
                    .forEach(news => {
                        const article = `
                            <article>
                                <img src="${news.imagen}" alt="${news.titulo}">
                                <h4>${news.titulo}</h4>
                                <p>${news.resumen}</p>
                                <button class="share-btn" onclick="shareArticle('${news.titulo}')">Compartir</button>
                            </article>
                        `;
                        newsContainer.innerHTML += article;
                    });
                if (!query) loadNews();
            })
            .catch(error => {
                console.error('Error buscando noticias:', error);
                newsContainer.innerHTML = '<p>Error al cargar noticias.</p>';
            });
    } catch (error) {
        console.error('Error buscando noticias:', error);
    }
}

// Compartir noticia
function shareArticle(title) {
    const url = window.location.href;
    const text = `¬°Mira esta noticia en M√©xico Se Enter√≥ - Tlalnepantla!: ${title}`;
    if (navigator.share) {
        navigator.share({ title, text, url }).catch(err => console.error('Error al compartir:', err));
    } else {
        alert(`Comparte este enlace: ${url}`);
    }
}

// Funcionalidad del men√∫ hamburguesa
function toggleMenu() {
    const nav = document.getElementById('nav-menu');
    const menuToggle = document.querySelector('.menu-toggle');
    nav.classList.toggle('active');
    menuToggle.classList.toggle('active');
}

// Funcionalidad de la barra de b√∫squeda
function toggleSearch() {
    const searchInput = document.getElementById('search-input');
    searchInput.classList.toggle('active');
}

// Cargar noticias y carrusel al iniciar
document.addEventListener('DOMContentLoaded', () => {
    loadNews();
    loadCarousel();
});
