// --- Funciones del carrusel y las noticias ---

let currentIndex = 0;
let autoSlide;

async function loadNews(city = 'Atizap√°n', containerId = 'news-container') {
    const newsContainer = document.getElementById(containerId);
    if (!newsContainer) {
        console.error(`Elemento ${containerId} no encontrado`);
        return;
    }
    newsContainer.innerHTML = '';
    try {
        const response = await fetch('/noticias.json');
        if (!response.ok) {
            throw new Error('No se pudo cargar noticias.json.');
        }
        const noticias = await response.json();
        const filteredNews = noticias.filter(n => n.ciudad === city);
        if (!filteredNews.length) {
            newsContainer.innerHTML = '<p>No hay noticias disponibles para esta ciudad.</p>';
            return;
        }
        filteredNews.slice(0, 6).forEach(news => {
            // Se corrige la l√≠nea del onclick para evitar errores con comillas
            const safeTitle = news.titulo ? news.titulo.replace(/'/g,"\\'") : 'Noticia';
            const article = `
                <article>
                    <img src="${news.imagen || 'https://via.placeholder.com/800x400?text=Imagen+No+Disponible'}" alt="${news.titulo || 'Sin t√≠tulo'}" loading="lazy">
                    <h4>${news.titulo || 'Sin t√≠tulo'}</h4>
                    <p>${news.resumen || 'Sin resumen'}</p>
                    <div class="author-info">
                        <img src="${news.logo_cuadrado || 'https://via.placeholder.com/50x50?text=Logo'}" alt="Logo del autor" class="author-logo">
                        <span>Por: ${news.autor || 'An√≥nimo'}</span>
                    </div>
                    <button class="share-btn" onclick="shareArticle('${safeTitle}')">Compartir</button>
                </article>
            `;
            newsContainer.innerHTML += article;
        });
    } catch (error) {
        console.error('Error cargando noticias:', error);
        newsContainer.innerHTML = '<p>Error al cargar noticias. Aseg√∫rate de que noticias.json est√© en el directorio ra√≠z del servidor.</p>';
    }
}

async function loadCarousel(city = 'Atizap√°n', containerId = '.carousel-inner') {
    const carouselInner = document.querySelector(containerId);
    if (!carouselInner) {
        console.error(`Elemento ${containerId} no encontrado`);
        return;
    }
    carouselInner.innerHTML = '';
    try {
        const response = await fetch('noticias.json');
        if (!response.ok) {
            throw new Error('No se pudo cargar noticias.json.');
        }
        const noticias = await response.json();
        const filteredNews = noticias.filter(n => n.ciudad === city);
        let destacadas = filteredNews.filter(news => news.destacada);
        if (!destacadas.length) {
            destacadas = filteredNews.slice(0, 3);
        }
        if (!destacadas.length) {
            carouselInner.innerHTML = '<p>No hay noticias destacadas disponibles.</p>';
            return;
        }
        destacadas.forEach((news, index) => {
            // Se corrige la l√≠nea del onclick
            const safeTitle = news.titulo ? news.titulo.replace(/'/g,"\\'") : 'Noticia';
            const item = `
                <div class="carousel-item ${index === 0 ? 'active' : ''}">
                    <img src="${news.imagen || 'https://via.placeholder.com/800x400?text=Imagen+No+Disponible'}" alt="${news.titulo || 'Sin t√≠tulo'}" loading="lazy">
                    <div class="carousel-content">
                        <h3>${news.titulo || 'Sin t√≠tulo'}</h3>
                        <p>${news.resumen || 'Sin resumen'}</p>
                        <div class="author-info">
                            <img src="${news.logo_horizontal || 'https://via.placeholder.com/50x50?text=Logo'}" alt="Logo del autor" class="author-logo-horizontal">
                            <span>Por: ${news.autor || 'An√≥nimo'}</span>
                        </div>
                    </div>
                    <button class="share-btn" onclick="shareArticle('${safeTitle}')">Compartir</button>
                </div>
            `;
            carouselInner.innerHTML += item;
        });
        const items = document.querySelectorAll('.carousel-item');
        if (items.length > 1) {
            clearInterval(autoSlide);
            autoSlide = setInterval(() => moveCarousel(1), 5000);
        }
    } catch (error) {
        console.error('Error cargando carrusel:', error);
        carouselInner.innerHTML = '<p>Error al cargar noticias destacadas.</p>';
    }
}

function moveCarousel(direction) {
    const items = document.querySelectorAll('.carousel-item');
    if (items.length <= 1) return;
    currentIndex = (currentIndex + direction + items.length) % items.length;
    document.querySelector('.carousel-inner').style.transform = `translateX(-${currentIndex * 100}%)`;
}

async function loadTodayNews(city = 'Atizap√°n', containerId = 'today-news-container') {
    const todayNewsContainer = document.getElementById(containerId);
    if (!todayNewsContainer) {
        console.error(`Elemento ${containerId} no encontrado`);
        return;
    }
    todayNewsContainer.innerHTML = '';
    try {
        const response = await fetch('noticias.json');
        const noticias = await response.json();
        const today = new Date().toISOString().split('T')[0];
        const todayNews = noticias.filter(n => n.ciudad === city && n.fecha === today);
        if (!todayNews.length) {
            todayNewsContainer.innerHTML = '<p>No hay noticias de hoy para esta ciudad.</p>';
            return;
        }
        todayNews.forEach(news => {
            // Se corrige la l√≠nea del onclick
            const safeTitle = news.titulo ? news.titulo.replace(/'/g,"\\'") : 'Noticia';
            todayNewsContainer.innerHTML += `
                <article>
                    <img src="${news.imagen || 'https://via.placeholder.com/800x400?text=Imagen+No+Disponible'}" alt="${news.titulo || 'Sin t√≠tulo'}" loading="lazy">
                    <h4>${news.titulo || 'Sin t√≠tulo'}</h4>
                    <p>${news.resumen || 'Sin resumen'}</p>
                    <div class="author-info">
                        <img src="${news.logo_cuadrado || 'https://via.placeholder.com/50x50?text=Logo'}" alt="Logo del autor" class="author-logo">
                        <span>Por: ${news.autor || 'An√≥nimo'}</span>
                    </div>
                    <button class="share-btn" onclick="shareArticle('${safeTitle}')">Compartir</button>
                </article>
            `;
        });
    } catch (error) {
        console.error('Error cargando noticias de hoy:', error);
        todayNewsContainer.innerHTML = '<p>Error al cargar noticias de hoy.</p>';
    }
}

// Funciones de b√∫squeda y compartir

function searchNews(city = 'Atizap√°n') {
    const query = (document.getElementById('search').value || '').toLowerCase();
    const newsContainer = document.getElementById('news-container');
    newsContainer.innerHTML = '';
    fetch('noticias.json')
        .then(r => r.json())
        .then(noticias => {
            noticias
                .filter(n => n.ciudad === city && (n.titulo.toLowerCase().includes(query) || n.resumen.toLowerCase().includes(query)))
                .slice(0, 6)
                .forEach(news => {
                    // Se corrige la l√≠nea del onclick
                    const safeTitle = news.titulo ? news.titulo.replace(/'/g,"\\'") : 'Noticia';
                    newsContainer.innerHTML += `
                        <article>
                            <img src="${news.imagen || 'https://via.placeholder.com/800x400?text=Imagen+No+Disponible'}" alt="${news.titulo || 'Sin t√≠tulo'}" loading="lazy">
                            <h4>${news.titulo || 'Sin t√≠tulo'}</h4>
                            <p>${news.resumen || 'Sin resumen'}</p>
                            <div class="author-info">
                                <img src="${news.logo_cuadrado || 'https://via.placeholder.com/50x50?text=Logo'}" alt="Logo del autor" class="author-logo">
                                <span>Por: ${news.autor || 'An√≥nimo'}</span>
                            </div>
                            <button class="share-btn" onclick="shareArticle('${safeTitle}')">Compartir</button>
                        </article>`;
                });
            if (!query) loadNews(city);
        })
        .catch(e => {
            console.error('Error buscando noticias:', e);
            newsContainer.innerHTML = '<p>Error al cargar noticias.</p>';
        });
}
